<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="colors">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="buttonColor">
        <item name="android:background">@color/orange</item>
    </style>

    <style name="timePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/tabBackground</item>
        <item name="android:headerBackground">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
    </style>

    <style name="mySlider" parent="@style/Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/My_Tooltip</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Slider</item>
    </style>

    <style name="My_Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <!-- background color of the Tooltip -->
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="ThemeOverlay.Slider" parent="">
        <!-- color used by the text in the Tooltip -->
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.Design.Tab"> <item name="android:textSize">12sp</item> </style>

</resources>