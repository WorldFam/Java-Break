<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="colors">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="buttonColor">
        <item name="android:background">@color/orange</item>
    </style>

    <style name="timePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/tabBackground</item>
        <item name="android:headerBackground">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:colorControlNormal">@color/orange</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.Design.Tab"> <item name="android:textSize">12sp</item> </style>
    <style name="SeekBarWithoutSteps" parent="Base.Widget.AppCompat.SeekBar.Discrete">
        <item name="tickMark">@null</item>
    </style>


    <style name="Divider.Color">
        <item name="android:background">@color/newBackground</item> //you can give your color here. that will change all divider color in your app.
    </style>

    <style name="Divider" parent="Divider.Color">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item> // You can change thickness here.

    </style>

    <style name="ColoredHandleTheme">
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="Switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/orange</item>
        <item name="colorSwitchThumbNormal">@color/grey
        </item>
        <item name="android:colorForeground">@color/grey
        </item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnim</item>
    </style>

    <style name="DialogAnim">
        <item name="android:windowEnterAnimation">@anim/slide_up_accelerate_interpolator</item>
        <item name="android:windowExitAnimation">@anim/slide_out_accelerate_interpolator</item>
    </style>

</resources>