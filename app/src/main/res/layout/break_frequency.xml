<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/breakFrequencyTab"
    android:layout_width="match_parent"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_height="100dp"
    android:background="@drawable/configurations_rectangle"
    android:gravity="center"
    android:animateLayoutChanges="true"
    android:layout_marginTop="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.488"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/breakDurationButton"
    app:layout_constraintVertical_bias="0.044">

    <TextView
        android:id="@+id/breakTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/autoStart"
        android:layout_marginTop="15dp"
        android:paddingLeft="25dp"
        android:text="Break frequency"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/breakIconConfigurations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/autoStart"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/breakTimeTextView"
        android:layout_toRightOf="@+id/snoozeTimeTextView"
        android:src="@drawable/ic_baseline_update_24" />

    <TextView
        android:id="@+id/breakFrequencyTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/autoStart"
        android:layout_alignParentRight="true"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@+id/breakTimeTextView"
        android:paddingRight="25dp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/breakFrequencySlider"
        style="@style/SeekBarWithoutSteps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/breakTimeTextView"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:progressBackgroundTint="@color/grey"
        android:progressDrawable="@drawable/seek_bar"
        android:progressTint="@color/orange"
        android:thumb="@drawable/seek_bar_thumb"
        android:thumbTint="@color/orange" />
</RelativeLayout>
