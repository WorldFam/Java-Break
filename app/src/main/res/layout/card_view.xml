<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp"
    android:backgroundTint="@color/tabBackground">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10dp"
            android:text="My first scheduled time!"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/workDurationText"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5sp"
            android:text="Work Duration"
            android:textAlignment="center"
            android:textColor="@color/lightGrey"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/workDurationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginLeft="15dp"
            android:text="Work Duration"
            android:textAlignment="center"
            android:textColor="@color/lightGrey"
            android:textSize="10sp"
            android:layout_marginTop="-5dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/breakDurationText"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:text="Break Duration"
            android:textAlignment="center"
            android:textColor="@color/lightGrey"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/breakDurationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:text="Break Duration"
            android:textAlignment="center"
            android:textColor="@color/lightGrey"
            android:textSize="10sp"
            android:layout_marginTop="-5dp"/>


        <ImageButton
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/textView3"
            android:backgroundTint="@color/tabBackground"
            app:srcCompat="@drawable/ic_baseline_notifications_active_24" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="8dp"
        android:orientation="horizontal">


        <CheckBox
            android:id="@+id/Monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/orange"
            android:checked="true"
            android:text="M"
            android:textColor="@color/lightGrey"
            android:textStyle="bold"/>

        <CheckBox
            android:id="@+id/Tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/lightGrey"
            android:text="Tu"
            android:textColor="@color/lightGrey" />

        <CheckBox
            android:id="@+id/Wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/lightGrey"
            android:text="W"
            android:textColor="@color/lightGrey" />

        <CheckBox
            android:id="@+id/Thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/lightGrey"
            android:text="Th"
            android:textColor="@color/lightGrey" />

        <CheckBox
            android:id="@+id/Friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/lightGrey"
            android:text="F"
            android:textColor="@color/lightGrey" />

        <CheckBox
            android:id="@+id/Saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/orange"
            android:checked="true"
            android:text="Sa"
            android:textColor="@color/lightGrey"
            android:textStyle="bold"/>

        <CheckBox
            android:id="@+id/Sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/lightGrey"
            android:text="S"
            android:textColor="@color/lightGrey" />
    </LinearLayout>



</androidx.cardview.widget.CardView>