<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp"
    android:layout_gravity="center"
    android:backgroundTint="@color/tabBackground">

    <RelativeLayout
        android:layout_marginStart="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tagLayout">
        <TextView
            android:id="@+id/tag"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:text="@string/daily_reminder"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/workDurationText"
            android:layout_marginStart="15dp"
            android:layout_marginTop="2dp"
            android:text="@string/work_duration"
            android:textAlignment="center"
            android:textColor="@color/lightGrey"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/workDurationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tagLayout"
            android:layout_marginStart="15dp"
            android:text="@string/work_duration"
            android:textAlignment="center"
            android:textColor="@color/lightGrey"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/breakDurationText"
            android:layout_marginStart="35dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/textView2"
            android:text="@string/break_duration"
            android:textAlignment="center"
            android:textColor="@color/lightGrey"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/breakDurationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tagLayout"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@+id/textView2"
            android:text="@string/break_frequency_duration"
            android:textAlignment="center"
            android:textColor="@color/lightGrey"
            android:textSize="10sp" />

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/breakDurationText"
            android:background="@null"
            app:srcCompat="@drawable/ic_baseline_delete_forever_24" />
    </RelativeLayout>



        <LinearLayout
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">


            <TextView
                android:id="@+id/Monday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/mon"
                android:layout_marginEnd="5dp"
                android:textColor="#80BFB3B3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Tuesday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tue"
                android:textColor="#80BFB3B3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Wednesday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/wed"
                android:textColor="#80BFB3B3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Thursday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/thu"
                android:textColor="#80BFB3B3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Friday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="-10dp"
                android:text="@string/fri"
                android:textColor="#80BFB3B3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Saturday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sat"
                android:layout_marginEnd="-5dp"
                android:textColor="#80BFB3B3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Sunday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sun"
                android:textColor="#80BFB3B3"
                android:textSize="18sp" />

        </LinearLayout>

</androidx.cardview.widget.CardView>
