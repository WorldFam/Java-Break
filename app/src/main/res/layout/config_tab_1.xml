<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:animateLayoutChanges="true"
    android:background="@drawable/configurations_rectangle"
    android:gravity="center"
    android:layout_margin="10dp"
    android:layout_below="@+id/autoStart"
    android:layout_alignBottom="@+id/workSessionCountText">

    <TextView
        android:id="@+id/breakTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/autoStart"
        android:layout_marginTop="15dp"
        android:paddingLeft="25dp"
        android:text="Break duration"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/breakIconConfigurations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/autoStart"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/breakTimeTextView"
        android:layout_toRightOf="@+id/snoozeTimeTextView"
        android:background="@drawable/ic_baseline_free_breakfast_configurations"/>

    <TextView
        android:id="@+id/breakTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@+id/breakTimeTextView"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        android:paddingRight="15dp"
        android:layout_below="@+id/autoStart" />

    <SeekBar
        android:id="@+id/breakSlider"
        style="@style/SeekBarWithoutSteps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/breakTimeTextView"
        android:progressBackgroundTint="@color/grey"
        android:progressTint="@color/orange"
        android:thumbTint="@color/orange"
        android:progressDrawable="@drawable/seek_bar"
        android:thumb="@drawable/seek_bar_thumb"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/snoozeTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/breakSlider"
        android:layout_marginTop="15dp"
        android:text="Snooze duration"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        android:paddingLeft="25dp"/>

    <ImageView
        android:id="@+id/SnoozeIconConfigurations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/breakSlider"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/snoozeTimeTextView"
        android:layout_toRightOf="@+id/snoozeTimeTextView"
        android:background="@drawable/ic_baseline_snooze_configurations" />

    <TextView
        android:id="@+id/snoozeTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/breakSlider"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="3dp"
        android:layout_toEndOf="@+id/snoozeTimeTextView"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:paddingEnd="25dp" />

    <SeekBar
        android:id="@+id/snoozeSlider"
        style="@style/SeekBarWithoutSteps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/snoozeTimeTextView"
        android:progressBackgroundTint="@color/grey"
        android:layout_marginTop="10dp"
        android:progressTint="@color/orange"
        android:thumbTint="@color/orange"
        android:progressDrawable="@drawable/seek_bar"
        android:thumb="@drawable/seek_bar_thumb"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" />

</RelativeLayout>