<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/workDurationTab"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@drawable/component_rectangle"
    android:gravity="center"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchCompatVibration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vibration"
            android:theme="@style/Switch"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:switchMinWidth="50dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_baseline_vibration_24"/>

        <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchCompatLED"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/led_indicator"
            android:theme="@style/Switch"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_baseline_wb_twilight_24"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:switchMinWidth="50dp"
            android:layout_marginTop="20dp" />

        <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>

        <androidx.appcompat.widget.SwitchCompat
            android:switchMinWidth="50dp"
            android:layout_marginBottom="5dp"
            android:theme="@style/Switch"
            android:id="@+id/sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Notification Sound"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_baseline_music_note_24"
            android:paddingEnd="10dp"
            android:layout_marginTop="20dp"/>

      <include layout="@layout/third_fragment_component"
          android:visibility="gone"/>

<!--        <TextView-->
<!--            android:layout_marginTop="50dp"-->
<!--            android:id="@+id/textView4"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="@string/about"-->
<!--            android:textColor="@color/white"-->
<!--            android:textStyle="bold"-->
<!--            android:textSize="15sp" />-->


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>