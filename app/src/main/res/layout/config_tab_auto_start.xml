<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:orientation="vertical"
    android:background="@drawable/component_rectangle"
    android:animateLayoutChanges="true"
    android:layout_margin="10dp">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/autoStartBreak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/auto_start_break"
        android:theme="@style/Switch"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:paddingStart="25dp"
        android:paddingEnd="10dp"
        android:switchMinWidth="50dp"
        android:layout_marginTop="20dp"
        tools:ignore="UnknownIdInLayout,UseSwitchCompatOrMaterialXml" />

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/autoStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/auto_start_work"
        android:theme="@style/Switch"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:paddingStart="25dp"
        android:paddingEnd="10dp"
        android:switchMinWidth="50dp"
        android:layout_marginTop="10dp"
        tools:ignore="UseSwitchCompatOrMaterialXml" />



</LinearLayout>